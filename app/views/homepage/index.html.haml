:javascript
  $(function () {
    $('.carousel').carousel({
      interval: 5000, 
    });
  });
:css
  .title {
    display: inline-block;
    margin-right: 20px;
    font: bold 3em Verdana, Geneva, sans-serif;
  }
  .item {
    overflow:hidden;
    width: 100%;
    height: 400px;
  }
  .item img {
    position: relative;
    z-index: 0;
    opacity: 0.7;
  }
  .fb-like {
    display: inline;
    vertical-align: top;
  }
.container
  .row
    .span12
      %h1.title Lonesome Giant
      <div class="fb-like" data-href="http://facebook.com/lonesomegiant" data-send="false" data-layout="button_count" data-width="450" data-show-faces="true"></div> 

  .row
    .span12
      #mainCarousel.carousel.slide
        .carousel-inner
          - Dir['public/bandpics/*'].each do |fname|
            .item
              %img(src="/#{fname.gsub('public/', '')}")
  .row 
    .span4
      = render "music"
    .span8
      = render "watch"
